{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}